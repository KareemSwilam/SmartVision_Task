@using FougeraClub.VM
@model UpdatePurchaseOrderVm

@{
    ViewData["Title"] = "تعديل أمر شراء";
}

<style>
    .green-border {
        border: 1px solid #28a745 !important;
    }

    .text-ico {
        color: #28a745;
    }

    .sec-title h1 {
        font-size: 1.25rem;
        color: #28a745;
        margin-bottom: 5px;
    }

    .title-sep-left {
        height: 2px;
        width: 50px;
        background: #28a745;
        margin-bottom: 2px;
    }

    .title-sep-sm-left {
        height: 2px;
        width: 25px;
        background: #28a745;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .date-icon {
        width: 20px;
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
    }

    .input-icon-left {
        position: relative;
    }

        .input-icon-left input {
            padding-left: 35px;
        }

    .table-editable-input {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 4px 8px;
        width: 100%;
    }

        .table-editable-input:focus {
            border-color: #28a745;
            outline: none;
            box-shadow: 0 0 5px rgba(40, 167, 69, 0.2);
        }
</style>

<div class="page-content d-flex flex-column min-vh-100">
    <div id="page-container" class="page-container flex-grow-1">
        <div class="card-header border-bottom d-flex align-items-start row my-3">
            <div class="d-flex align-items-center col-md-6 flex-wrap">
                <h4 class="ico-header-title">
                    <i class="fa-solid fa-pen-to-square me-1 text-ico"></i> تعديل أمر الشراء رقم @ViewBag.OrderId
                </h4>
            </div>
            <div class="col-md-6 d-flex align-items-center justify-content-end gap-1 flex-wrap">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 py-2">
                        <li class="breadcrumb-item"><a href="#">وحدة أوامر الشراء</a></li>
                        <li class="breadcrumb-item"><a href="/Admin/PurchaseOrder">أوامر الشراء</a></li>
                        <li class="breadcrumb-item active">تعديل</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="card p-4">
            @* نستخدم asp-route-id لإرسال المعرف للأكشن *@
            <form method="post" asp-action="Edit" asp-route-id="@ViewBag.OrderId" id="purchaseOrderForm">
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-10">
                        <label class="form-label fw-semibold">رقم أمر الشراء</label>
                        <input value="@ViewBag.OrderId" disabled readonly class="form-control mb-2 bg-light" type="text">
                    </div>
                    <div class="col-md-2">
                        <div class="d-flex align-items-center gap-3 ms-1 mt-4">
                            <input type="checkbox" class="form-check-input" style="transform: scale(1.6); cursor: pointer;"
                                   id="HasVAT" name="Order.ApplyVAT" value="true" @(Model.Order.ApplyVAT ? "checked" : "")>
                            <input type="hidden" name="Order.ApplyVAT" value="false" />
                            <label class="form-label fw-semibold mb-0" for="HasVAT">With 5% VAT</label>
                        </div>
                    </div>

                    <div class="col-md-6 mb-2">
                        <label class="form-label fw-semibold">التاريخ</label>
                        <div class="input-icon-left">
                            <img src="https://cdn-icons-png.flaticon.com/512/747/747310.png" class="date-icon">
                            @* عرض التاريخ القديم بصيغة yyyy-MM-dd *@
                            <input class="form-control green-border" type="date" name="Order.Date"
                                   value="@Model.Order.Date.ToString("yyyy-MM-dd")" required id="DateInput">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">المورد</label>
                        <select class="form-control mb-2" required name="Order.SupplierId">
                            <option value="">-- اختر المورد --</option>
                            @if (ViewBag.Suppliers != null)
                            {
                                foreach (var s in ViewBag.Suppliers)
                                {
                                   <!option value="@s.Id" @(s.Id == Model.Order.SupplierId ? "selected" : "")>@s.Name</!option>
                                }
                            }
                        </select>
                    </div>
                </div>

                <hr class="my-4">

                <div class="row">
                    <div class="col-md-12">
                        <div class="sec-title"><h1>إضافة/تعديل بنود أمر الشراء</h1><div class="title-sep-left"></div><div class="title-sep-sm-left"></div></div>
                    </div>
                </div>

                @* حقول الإضافة السريعة *@
                <div class="row mt-3 bg-light p-3 rounded border">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">الكمية</label>
                        <input id="temp_Quantity" class="form-control mb-2" type="number" value="1" min="1">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">سعر الوحدة</label>
                        <input id="temp_Price" placeholder="0.00" class="form-control mb-2" type="number" step="0.01">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">البيان (الوصف)</label>
                        <input id="temp_Description" class="form-control mb-2" type="text">
                    </div>
                    <div class="col-md-12 d-flex justify-content-end mt-2">
                        <button type="button" class="btn btn-success px-4" onclick="addItemToTable()">
                            <i class="fa-solid fa-plus me-2"></i> إضافة بند جديد
                        </button>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="sec-title mb-3"><h1>البنود الحالية</h1><div class="title-sep-left"></div><div class="title-sep-sm-left"></div></div>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 15%">الكمية</th>
                                        <th style="width: 20%">سعر الوحدة</th>
                                        <th style="width: 45%">البيان</th>
                                        <th style="width: 20%" class="text-center">أدوات</th>
                                    </tr>
                                </thead>
                                <tbody id="itemsTableBody">
                                    @for (int i = 0; i < Model.Items.Count; i++)
                                    {
                                        <tr>
                                            <td>
                                                
                                                <input type="hidden" name="Items[@i].Id" value="@Model.Items[i].Id" />
                                                <input type="number" class="table-editable-input" name="Items[@i].Amount" value="@Model.Items[i].Amount" min="1" />
                                            </td>
                                            <td>
                                                <input type="number" step="0.01" class="table-editable-input" name="Items[@i].PricePerUnit" value="@Model.Items[i].PricePerUnit" />
                                            </td>
                                            <td>
                                                <input type="text" class="table-editable-input" name="Items[@i].Description" value="@Model.Items[i].Description" />
                                            </td>
                                            <td class="text-center">
                                                <button type="button" class="btn-control btn-icon btn-sm rounded-circle" onclick="removeRow(this)">
                                                    <i class="fa-solid fa-trash fs-5"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4 border-top pt-3">
                    <button type="submit" class="btn btn-primary me-2 px-5">
                        <i class="fa-solid fa-floppy-disk me-1"></i> حفظ التعديلات
                    </button>
                    <a class="btn btn-outline-secondary" href="/PurchaseOrder/Index">إلغاء</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // نبدأ الـ Index من عدد الأصناف الموجودة فعلياً
        let itemIndex = @Model.Items.Count();

        function addItemToTable() {
            const qty = document.getElementById('temp_Quantity').value;
            const price = document.getElementById('temp_Price').value;
            const desc = document.getElementById('temp_Description').value;

            if (!qty || qty <= 0 || !price || price <= 0 || desc.trim() === "") {
                alert("يرجى إكمال البيانات بشكل صحيح");
                return;
            }

            const tbody = document.getElementById('itemsTableBody');
            const row = document.createElement('tr');

            // لاحظ أننا نضع Id = 0 للأصناف الجديدة تماماً
            row.innerHTML = `
                <td>
                    <input type="hidden" name="Items[${itemIndex}].Id" value="0" />
                    <input type="number" class="table-editable-input" name="Items[${itemIndex}].Amount" value="${qty}" min="1" />
                </td>
                <td>
                    <input type="number" step="0.01" class="table-editable-input" name="Items[${itemIndex}].PricePerUnit" value="${price}" />
                </td>
                <td>
                    <input type="text" class="table-editable-input" name="Items[${itemIndex}].Description" value="${desc}" />
                </td>
                <td class="text-center">
                    <button type="button" class="btn btn-outline-danger btn-sm rounded-circle" onclick="removeRow(this)"><i class="fa-solid fa-trash"></i></button>
                </td>
            `;

            tbody.appendChild(row);
            itemIndex++;

            document.getElementById('temp_Price').value = '';
            document.getElementById('temp_Description').value = '';
            document.getElementById('temp_Quantity').focus();
        }

        function removeRow(btn) {
            btn.closest('tr').remove();
            reIndexTable();
        }

        function reIndexTable() {
            const rows = document.querySelectorAll('#itemsTableBody tr');
            itemIndex = 0;
            rows.forEach((row, index) => {
                row.querySelectorAll('input').forEach(input => {
                    const name = input.getAttribute('name');
                    if(name) {
                        const newName = name.replace(/\[\d+\]/, `[${index}]`);
                        input.setAttribute('name', newName);
                    }
                });
                itemIndex = index + 1;
            });
        }
    </script>
}